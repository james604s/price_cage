# 環境配置範例文件
# 複製此文件為 .env 並填入真實的配置值

# 基本設定
APP_NAME="Price Cage"
APP_VERSION="1.0.0"
DEBUG=false

# 資料庫設定
DATABASE_URL="postgresql://username:password@localhost:5432/price_cage"
DATABASE_ECHO=false

# API 設定
API_HOST="0.0.0.0"
API_PORT=8000
API_WORKERS=1
API_RELOAD=false

# 安全設定
SECRET_KEY="your-super-secret-key-here-change-this-in-production"
ALLOWED_HOSTS="*"

# 爬蟲設定
CRAWLER_DELAY=1.0
CRAWLER_TIMEOUT=30
CRAWLER_RETRIES=3

# Redis 設定
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_PASSWORD=""
REDIS_DB=0

# Celery 設定
CELERY_BROKER_URL="redis://localhost:6379/0"
CELERY_RESULT_BACKEND="redis://localhost:6379/0"

# 日誌設定
LOG_LEVEL="INFO"
LOG_FILE=""

# 存儲設定
STORAGE_PATH="./data"
IMAGE_STORAGE_PATH="./data/images"

# 代理設定（可選）
PROXY_ENABLED=false
PROXY_HTTP=""
PROXY_HTTPS=""

# 監控設定
ENABLE_METRICS=true
METRICS_PORT=9090